[user]
	name = Gr√©goire Paris
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[merge]
	keepBackup = false
	tool = nvimdiff
[core]
	editor = nvim
	pager = diff-so-fancy | less -FXRi
	excludesfile = ~/.gitignore_global
[push]
	default = simple
[init]
	templatedir = ~/.git_template/template
[hooks "junkchecker"]
	phrasesfile = $HOME/.junk_phrases
[hooks "php-sismo"]
	path = /usr/share/nginx/html/sismo.php
[hooks "notification"]
	notifier = notify-send
[hooks]
	enabled-plugins = junkchecker
[hooks "php-ctags"]
	tag-kinds = cfit
[hooks "composer"]
	onChange = just_warn
[rebase]
	autosquash = true
	autostash = true
	abbreviateCommands = true
	missingCommitsCheck = warn
	instructionFormat = [%an @ %ar] %s
[commit]
	gpgsign = true
	verbose = true
[include]
	path = ~/.gitconfig.local
[rerere]
	enabled = true
